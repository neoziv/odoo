<?xml version="1.0" encoding="utf-8"?>
<neoziv>
    <data>

        <record id="acquirer_form_neoziv_by_adyen" model="ir.ui.view">
            <field name="name">acquirer.form.neoziv.by.adyen</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'neoziv_adyen')]}">
                        <button name="neoziv_adyen_create_account" icon="fa-arrow-right" type="object" class="btn-link" string="Create an account in 1 minute"
                            attrs="{'invisible': [('neoziv_adyen_account_id', '!=', False)]}"/>
                        <field name="neoziv_adyen_account_id" readonly="1" attrs="{'invisible': [('neoziv_adyen_account_id', '=', False)]}"/>
                        <field name="neoziv_adyen_payout_id" attrs="{'invisible': [('neoziv_adyen_account_id', '=', False)], 'required':[('provider', '=', 'neoziv_adyen'), ('state', '!=', 'disabled')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</neoziv>
